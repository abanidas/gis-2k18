<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Added this spinner to switch between different challenges -->
        <Spinner
            android:id="@+id/spinner_challenges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/array_challenge_types"
            android:layout_margin="4dp"
            android:padding="5dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/spinner_challenges"
            android:id="@+id/challenges_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>