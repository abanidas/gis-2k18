<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/tv_profile_gis_stories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_stories_header"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="@dimen/paragraph_standard_padding"
            android:textStyle="bold"
            android:paddingTop="@dimen/paragraph_standard_padding"
            android:visibility="visible"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_user_gis_stories"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stories_recyclerview_height" />
        <TextView
            android:id="@+id/tv_profile_gis_projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paragraph_standard_padding"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:textStyle="bold"
            android:text="@string/text_project_header"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_user_gis_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout >
</android.support.v4.widget.NestedScrollView>
