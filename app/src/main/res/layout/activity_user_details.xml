<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.udacity.googleindiascholarships.currentuser.ui.UserDetailsActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false"
            app:collapsedTitleGravity="left|top"
            app:title="@string/text_user_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_marginBottom="@dimen/triple_margin"
                app:layout_collapseMode="parallax">

                <FrameLayout
                    android:layout_marginTop="@dimen/user_picture_frame_margin_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile_picture"
                        android:layout_width="@dimen/profile_picture_diameter"
                        android:layout_height="@dimen/profile_picture_diameter"
                        android:src="@drawable/gis_logo"
                        app:civ_border_width="@dimen/profile_picture_border"
                        app:civ_border_color="@color/color_border_profile_pricture"/>

                    <ImageButton
                        android:id="@+id/btn_upload_user_profile_pic"
                        android:layout_gravity="bottom|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/icon_button_padding"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:background="@color/material_red"
                        android:tint="@color/white"
                        android:visibility="gone"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_user_name"
                    android:textColor="@color/lightWhite"
                    android:textSize="@dimen/sp_standard_size"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/text_margin_small"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tv_user_short_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Developer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_medium_size"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:id="@+id/et_edit_user_short_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Developer"
                    android:textSize="@dimen/sp_medium_size"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"/>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs_user_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:tabIndicatorColor="@android:color/white"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextColor="@color/white"
                android:background="@color/colorPrimaryDark"/>

            <ImageButton
                android:id="@+id/btn_edit_user_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/action_button_margin_right"
                android:background="@android:color/transparent"
                android:padding="@dimen/icon_button_standard_padding"
                android:src="@drawable/ic_edit_black_24dp" />


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_user_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</android.support.design.widget.CoordinatorLayout>
